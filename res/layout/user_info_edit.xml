<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_view"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_vv_light"
    android:weightSum="2">
    <include
        android:id="@+id/header_container"
        android:background="@android:color/transparent"
        layout="@layout/header_normal" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_container"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:paddingRight="0dp"
        android:paddingLeft="0dp"
        android:background="@drawable/common_underline_and_upline_gray"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/common_underline_gray"
            android:gravity="center_vertical"
            android:paddingBottom="1dp"
            android:paddingLeft="20dp"
            android:onClick="modifyAvatarOnClick"
            >
            <TextView
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:text="头像"
                android:gravity="center_vertical"
                android:textSize="20sp"
                android:textColor="@color/gray_dack"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_arrow_gray"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/common_underline_gray"
            android:gravity="center_vertical"
            android:paddingBottom="1dp"
            android:paddingLeft="20dp"
            >
            <TextView
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:text="姓名"
                android:gravity="center_vertical"
                android:textSize="20sp"
                android:textColor="@color/gray_dack"/>
            <EditText
                android:id="@+id/user_real_name"
                android:layout_marginLeft="60dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:textColor="@color/gray"
                android:textSize="20sp"
                android:layout_marginRight="40dp"
                android:background="@color/white"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/common_underline_gray"
            android:gravity="center_vertical"
            android:paddingBottom="1dp"
            android:paddingLeft="20dp"
            android:onClick="modifySexOnClick"
            >
            <TextView
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:text="性别"
                android:gravity="center_vertical"
                android:textSize="20sp"
                android:textColor="@color/gray_dack"/>
            <TextView
                android:id="@+id/user_sex"
                android:layout_marginLeft="60dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:text="男"
                android:textColor="@color/gray"
                android:layout_marginRight="40dp"
                android:textSize="20sp"
                android:background="@color/white"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_arrow_gray"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/common_underline_gray"
            android:gravity="center_vertical"
            android:paddingBottom="1dp"
            android:paddingLeft="20dp"
            android:onClick="modifyBirthdayOnClick"
            >
            <TextView
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:text="生日"
                android:gravity="center_vertical"
                android:textSize="20sp"
                android:textColor="@color/gray_dack"/>
            <TextView
                android:id="@+id/user_birthday"
                android:layout_marginLeft="60dp"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:textColor="@color/gray"
                android:layout_marginRight="40dp"
                android:background="@color/white"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_arrow_gray"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/common_underline_gray"
            android:gravity="center_vertical"
            android:paddingBottom="1dp"
            android:paddingLeft="20dp"
            >
            <TextView
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:text="行业"
                android:gravity="center_vertical"
                android:textSize="20sp"
                android:textColor="@color/gray_dack"/>
            <EditText
                android:id="@+id/user_industry"
                android:layout_marginLeft="60dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:textColor="@color/gray"
                android:textSize="20sp"
                android:layout_marginRight="40dp"
                android:background="@color/white"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/common_underline_gray"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingBottom="1dp"
            >
            <TextView
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:text="电话"
                android:gravity="center_vertical"
                android:textSize="20sp"
                android:textColor="@color/gray_dack"/>
            <EditText
                android:id="@+id/user_phone"
                android:layout_marginLeft="60dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:textColor="@color/gray"
                android:textSize="20sp"
                android:layout_marginRight="40dp"
                android:background="@color/white"/>
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="保存"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:textSize="20sp"
        android:textColor="@color/gray_dack"
        android:background="@drawable/common_underline_and_upline_gray"
        android:onClick="saveOnClick"
        />
</RelativeLayout >