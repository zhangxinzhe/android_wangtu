<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/home_reward_publish_container_padding_bottom"
    android:background="@android:color/white">
    <include
        android:id="@+id/header_container"
        android:background="@android:color/transparent"
        layout="@layout/header_normal" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="false"
        android:layout_marginTop="@dimen/home_header_height"
        android:layout_marginBottom="50dp"
        android:background="@color/white">
        <include
            android:id="@+id/reward_edit"
            layout="@layout/reward_edit" />
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="15dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        >
        <Button
            android:id="@+id/publishReward"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="发布"
            style="@style/home_fragment_reward_item_btn"
            android:background="@drawable/btn_common_white"
            android:onClick="publishRewardOnClick"
            />
        <Button
            android:id="@+id/cancelReward"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="保存"
            style="@style/home_fragment_reward_item_btn"
            android:background="@drawable/btn_common_white"
            android:onClick="saveRewardOnClick"
            />
    </LinearLayout>
</RelativeLayout>