<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:weightSum="2">
    <include
        android:id="@+id/header_container"
        android:background="@android:color/transparent"
        layout="@layout/header_normal" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_container"
        android:orientation="vertical"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/common_underline_gray"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用&#160;&#160;户&#160;&#160;名"
                style="@style/register_item_text"
                />
            <EditText
                android:id="@+id/txt_userName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="zhangxz"
                style="@style/register_item_edit_text"
                android:layout_marginLeft="@dimen/home_fragment_reward_item_margin_left_100"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/common_underline_gray"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户姓名"
                style="@style/register_item_text"
                />
            <EditText
                android:id="@+id/txt_realName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="zhangxz"
                style="@style/register_item_edit_text"
                android:layout_marginLeft="@dimen/home_fragment_reward_item_margin_left_100"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/common_underline_gray"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;码"
                style="@style/register_item_text"
                />
            <EditText
                android:id="@+id/txt_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="123456"
                android:inputType="textPassword"
                style="@style/register_item_edit_text"
                android:layout_marginLeft="@dimen/home_fragment_reward_item_margin_left_100"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/common_underline_gray"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确认密码"
                style="@style/register_item_text"
                />
            <EditText
                android:id="@+id/txt_password_again"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="123456"
                android:inputType="textPassword"
                style="@style/register_item_edit_text"
                android:layout_marginLeft="@dimen/home_fragment_reward_item_margin_left_100"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/common_underline_gray"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手&#160;&#160;机&#160;&#160;号"
                style="@style/register_item_text"
                />
            <EditText
                android:id="@+id/txt_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="112232134345"
                style="@style/register_item_edit_text"
                android:layout_marginLeft="@dimen/home_fragment_reward_item_margin_left_100"
                />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="40dp"
        android:layout_alignParentBottom="true"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="注册"
            style="@style/home_fragment_reward_item_btn"
            android:background="@drawable/btn_common_white"
            android:onClick="register"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="取消"
            style="@style/home_fragment_reward_item_btn"
            android:background="@drawable/btn_common_white"
            android:onClick="cancel"
            />
    </LinearLayout>
</RelativeLayout >