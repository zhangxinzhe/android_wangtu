<net.wangtu.android.view.RewardCreateView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/home_reward_publish_container_padding_bottom"
    android:background="@android:color/transparent">
    <include
        android:id="@+id/header_container"
        android:background="@android:color/transparent"
        layout="@layout/home_header" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="false"
        android:layout_marginTop="@dimen/home_header_height"
        android:layout_marginBottom="70dp"
        android:background="@color/white">
        <include
            android:id="@+id/reward_edit"
            android:background="@android:color/transparent"
            layout="@layout/reward_edit" />
    </ScrollView>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:src="@drawable/icon_home_want"
        android:scaleType="fitXY"
        android:layout_alignParentBottom="true"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:layout_marginBottom="40dp"
        >
        <Button
            android:id="@+id/publishReward"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="创建"
            style="@style/home_fragment_reward_item_btn"
            android:background="@drawable/btn_common_white"
            />
        <Button
            android:id="@+id/cancelReward"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="取消"
            style="@style/home_fragment_reward_item_btn"
            android:background="@drawable/btn_common_white"
            />
    </LinearLayout>
</net.wangtu.android.view.RewardCreateView>