<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="280dp"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layout_gravity="start">
    <RelativeLayout
        android:id="@+id/leftbar_header"
        android:onClick="userInfoOnClick"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center_vertical"
        android:background="@color/brown">
        <net.wangtu.android.common.view.CircleImageView
            xmlns:wangtu="http://schemas.android.com/apk/res/net.wangtu.android"
            android:id="@+id/leftbar_header_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="15dp"
            wangtu:circleBorderWidth="2dp"
            wangtu:circleBorderColor="@color/white"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_header" />

        <TextView
            android:id="@+id/leftbar_real_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="未登录"
            android:padding="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_centerVertical="true"
            android:textSize="35sp"
            android:layout_marginLeft="80dp"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:layout_below="@+id/leftbar_header">
        <RelativeLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:onClick="myTaskOnClick"
            android:layout_height="50dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_left_bar"
                style="@style/home_leftbar_img"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="我的任务"
                style="@style/home_leftbar_text"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:onClick="myRewardOnClick"
            android:layout_height="50dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_left_bar"
                style="@style/home_leftbar_img"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="我的悬赏"
                style="@style/home_leftbar_text"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:onClick="myNoticeOnClick"
            android:layout_height="50dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_left_bar"
                style="@style/home_leftbar_img"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="我的消息"
                style="@style/home_leftbar_text"
                />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical"
        android:onClick="settingOnClick"
        >
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/icon_setting2"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="设置"
            android:textColor="@color/black"
            android:layout_marginLeft="40dp"
            android:gravity="center_vertical"
            />
    </RelativeLayout>
</RelativeLayout>