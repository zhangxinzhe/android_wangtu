<net.wangtu.android.view.RewardEditView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/home_fragment_reward_item_background"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:weightSum="10"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="悬赏主题"
            style="@style/home_fragment_reward_item_text"
            />
        <EditText
            android:id="@+id/reward_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:text="设计一个银行年会主题背景"
            style="@style/home_fragment_reward_item_text"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/home_fragment_reward_item_background"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:weightSum="10"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="所属分类"
            style="@style/home_fragment_reward_item_text"
            />
        <TextView
            android:id="@+id/reward_catalog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:text="请选择"
            style="@style/home_fragment_reward_item_text"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/home_fragment_reward_item_background"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:weightSum="10"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="悬赏金额"
            style="@style/home_fragment_reward_item_text"
            />
        <EditText
            android:id="@+id/reward_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:text="150"
            style="@style/home_fragment_reward_item_text"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/home_fragment_reward_item_background"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:weightSum="10"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="期&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;限"
            style="@style/home_fragment_reward_item_text"
            />
        <TextView
            android:id="@+id/reward_deadline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="2017年10月21号"
            style="@style/home_fragment_reward_item_text"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="之前完成"
            android:layout_weight="2"
            android:textColor="@color/red"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/home_fragment_reward_item_background"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:weightSum="10"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="工作地点"
            style="@style/home_fragment_reward_item_text"
            />
        <EditText
            android:id="@+id/reward_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:text="不限"
            style="@style/home_fragment_reward_item_text"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/home_fragment_reward_item_background"
        android:orientation="horizontal"
        android:weightSum="10"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="悬赏描述"
            android:singleLine="true"
            style="@style/home_fragment_reward_item_text"
            />
        <EditText
            android:id="@+id/reward_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="20dp"
            android:layout_weight="7"
            android:hint="请填写描述内容"

            style="@style/home_fragment_reward_item_text"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_image"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingTop="15dp" >

        <net.wangtu.android.common.view.HorizontalListView
            xmlns:zerobook="http://schemas.android.com/apk/res-auto"
            android:id="@+id/photoView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:divider="@null"
            zerobook:dividerWidth="10dp" />

        <TextView
            android:id="@+id/tv_photo_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="可选9张"
            android:textColor="#444"
            android:textSize="12sp" />
    </LinearLayout>
</net.wangtu.android.view.RewardEditView>