<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <include
        android:id="@+id/header_container"
        android:background="@android:color/transparent"
        layout="@layout/header_normal" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="false"
        android:layout_marginTop="@dimen/home_header_height"
        android:layout_marginBottom="50dp"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true"
            >
            <include layout="@layout/reward_read" />

            <ListView
                android:id="@+id/designerListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:divider="#e6e6e6"
                android:dividerHeight="1dp"
                android:listSelector="@android:color/transparent" />
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="15dp"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="选中他"
            style="@style/home_fragment_reward_item_btn"
            android:background="@drawable/btn_common_white"
            android:onClick="chooseOnClick"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="再等等"
            style="@style/home_fragment_reward_item_btn"
            android:background="@drawable/btn_common_white"
            android:onClick="waitOnClick"
            />
    </LinearLayout>
</RelativeLayout>