<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <include
        android:id="@+id/header_container"
        android:background="@android:color/transparent"
        layout="@layout/header_normal" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="false"
        android:background="@color/white"
        android:layout_below="@+id/header_container"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="50dp"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true"
            >
            <include layout="@layout/reward_read" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/white"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:onClick="showDesignerInfoOnclick"
                android:visibility="visible">
                <ImageView
                    android:id="@+id/reward_designer_img"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/reward_image"
                    />

                <TextView
                    android:id="@+id/reward_designer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设计师Lv1"
                    android:layout_marginLeft="60dp"
                    android:textSize="12sp"
                    android:textColor="@color/gray_dack"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/reward_expect_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="期望赏金：200.00"
                    android:layout_marginLeft="60dp"
                    android:layout_below="@id/reward_designer"
                    android:textSize="13sp"
                    android:textColor="@color/yellow" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:text="想了解更多>"
                    android:gravity="bottom"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:textSize="13sp"
                    android:textColor="@color/red" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/reward_result_relative"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="15dp"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/reward_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/red"
            android:text="任务完成"
            android:gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/reward_btn_relative"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="15dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:visibility="gone"
        >
        <Button
            android:id="@+id/publishReward"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="完成"
            style="@style/home_fragment_reward_item_btn"
            android:background="@drawable/btn_common_white"
            android:onClick="finishRewardOnClick"
            />
        <Button
            android:id="@+id/cancelReward"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="返回"
            style="@style/home_fragment_reward_item_btn"
            android:background="@drawable/btn_common_white"
            android:onClick="backOnClick"
            />
    </LinearLayout>
</RelativeLayout>